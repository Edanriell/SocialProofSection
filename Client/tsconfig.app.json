{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@app/*": ["./src/app/*"],
			"@entities/*": ["./src/entities/*"],
			"@features/*": ["./src/features/*"],
			"@pages/*": ["./src/pages/*"],
			"@shared/*": ["./src/shared/*"],
			"@widgets/*": ["./src/widgets/*"]
		}
	}
}
